                 <label>
                    <input class="form-control mt-3" type="password" minlength="8" name="password" placeholder="password" required>
                 </label>
                              <p class="gender_text">Выбрите пол</p>
                 <label class="gender_label">
                  <div>Муж <input  type="radio"  value="Муж" name="gender"  required></div>
                  <div>Жен<input  type="radio"  value="Жен" name="gender"  required></div>
               </label>
               <label>
                              <p class="gender_text">Добавте телефон</p>
                  <input class="form-control mt-3" type="phone"  name="phone" required>
               </label>
                 <button class="btn btn-primary mt-3">представить</button>
                 <a href="/login" class=" btn btn-primary mt-3">Войти аккаунт</a>
             </form>
           </div>
        </section>
